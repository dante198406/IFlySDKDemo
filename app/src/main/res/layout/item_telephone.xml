<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_telephone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:clickable="true"
    android:layout_gravity="center_vertical"
    android:background="@drawable/item_unselect_bg" 
    android:visibility="invisible">

    <TextView
        android:id="@+id/index_txt"
        style="@style/IndexStyle"
        android:layout_width="@dimen/index_txt_size"
        android:layout_height="@dimen/index_txt_size"
        android:layout_centerVertical="true"
        android:background="@drawable/num_unselect_bg"
        android:layout_marginLeft="@dimen/tip_line_space"
        android:gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/location_txt"
        style="@style/LocationStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/index_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/tip_line_space"
         />

    <TextView
        android:id="@+id/name_txt"
        style="@style/ContactStyle"
        android:layout_width="@dimen/contact_name_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/contact_name_margin_left"
        android:layout_toRightOf="@id/index_txt"
        android:ellipsize="marquee"
        android:singleLine="true"
         />

    <TextView
        android:id="@+id/number_txt"
        style="@style/NumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/contact_num_margin_left"
        android:layout_toLeftOf="@id/location_txt"
        android:layout_toRightOf="@id/name_txt"
        android:singleLine="true"
         />

</RelativeLayout>